@model IEnumerable<Learn.Models.Employee>
@using Learn.Language

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink(Resource.Create_new, "Add")
</p>
<table class="table">
    <tr>
        <th>
            @Resource.FirstName
        </th>
        <th>
            @Resource.LastName
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.ActionLink(@Resource.Edit, "Edit", new { id=item.Id }) |
            @Html.ActionLink(@Resource.Details, "Details", new { id=item.Id }) |
            @Html.ActionLink(@Resource.Delete, "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
