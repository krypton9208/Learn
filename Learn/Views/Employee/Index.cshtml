@model Learn.Models.EmployeeViewModel
@using Learn.Language

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink(Resource.Create_new, "Add", new object(), new { @class = "btn btn-default" })
    @Html.ActionLink("Allow to access", "AllowUser", new object(), new { @class = "btn btn-default pull-right" })
    @using (Html.BeginForm())
    {
        <div class="form-inline">
            @Html.Editor("search", new { htmlAttributes = new { @class = "form-control in" } })
            @Html.DropDownList("Categories", Model.Categories
    , new { onchange = "getAlldata()" , @class = "form-control in" })
            <input type="submit" value="Search" class="btn btn-default" />
        </div>
        @*<div class="form-inline">

        </div>*@

    }
</p>
<table class="table">
    <tr>
        <th>
            @Resource.FirstName
        </th>
        <th>
            @Resource.LastName
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Edit", "Employee", new { id = item.Id }, null)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.ActionLink(@Resource.Edit, "Edit", new { id = item.Id }, new { @class = "btn btn-default" })
                @Html.ActionLink(@Resource.Details, "Details", new { id = item.Id }, new { @class = "btn btn-default" })
            </td>
        </tr>
    }

</table>
